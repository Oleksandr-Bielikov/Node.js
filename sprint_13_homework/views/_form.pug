form(action=doc ? `/${action}/${doc._id}` : `/${action}`  method="POST")
    .mb-3
        label.form-label(for="title") Title
        input.form-control#title(type="text" name="title" value=doc ? doc.title : "" required)
    
    .mb-3
        label.form-label(for="url") URL
        input.form-control#url(type="text" name="url" value=doc ? doc.url : "" required)

    .mb-3
        label.form-label(for="image") Image
        input.form-control#image(type="text" name="image" value=doc ? doc.image : "")
    
    .mb-3
        label.form-label(for="price") Price
        input.form-control#price(type="number" name="price" step="0.01" value=doc ? doc.price : "" required)
    
    .mb-3
        label.form-label(for="stock") Stock
        input.form-control#stock(type="number" name="stock" value=doc ? doc.stock : "" required)
    
    button.btn.btn-primary(type="submit")= doc ? "Update" : "Create"
    | 
    a.btn.btn-secondary(href="/") Cancel
